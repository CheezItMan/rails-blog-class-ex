<%= form_for @post do |f| %>
  <fieldset>
    <legend>Post Information</legend>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :writer_id, "Writer" %>
    <%= f.collection_select(:writer_id, Writer.all, :id, :name,
      prompt: "Select the Writer:") %>
  </fieldset>
  <%= f.submit %>
<% end %>
