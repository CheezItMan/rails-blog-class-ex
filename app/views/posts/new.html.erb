<ul>
  <% @post.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>

<%= form_for @post, :html => { :class => "form" } do |f| %>
  <fieldset>
    <legend>Post Information</legend>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :writer_id, "Writer" %>
      <%= f.collection_select(:writer_id, Writer.all, :id, :name,
        { prompt: "Select the Writer:" },
        { class: "form-control" } ) %>
    </div>
  </fieldset>
  <%= f.submit class: "btn btn-info" %>
<% end %>
